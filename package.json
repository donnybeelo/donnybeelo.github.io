{
	"name": "donnybeelo.github.io",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "NEXT_PUBLIC_BASE_URL=http://localhost:3000 bun run postbuild && next dev --turbopack",
		"prod": "bun run build && trap 'rm -rf out' INT; npx serve@latest out",
		"build": "next build --turbopack",
		"postbuild": "bun run scripts/generate-static-files.ts",
		"start": "npx serve@latest out",
		"lint": "biome check",
		"format": "biome format --write"
	},
	"dependencies": {
		"highlight.js": "^11.11.1",
		"next": "16.1.1",
		"next-mdx-remote": "^5.0.0",
		"react": "19.2.3",
		"react-dom": "19.2.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@tailwindcss/postcss": "^4.1.18",
		"@types/node": "^25.0.3",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"autoprefixer": "^10.4.23",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3"
	}
}
